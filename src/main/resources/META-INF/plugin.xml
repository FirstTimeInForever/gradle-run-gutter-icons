<idea-plugin>
    <id>firsttimeinforever.gradlerunguttericon</id>
    <name>Gradle Run Gutter Icon</name>
    <vendor email="ivmposti@gmail.com" url="https://github.com/FirstTimeInForever/gradle-run-gutter-icon">
        FirstTimeInForever
    </vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.gradle</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="kotlin" implementationClass="com.github.firsttimeinforever.gradlerunguttericon.editor.GradleTasksLineMarkerProvider"/>
        <notificationGroup displayType="BALLOON" id="Gradle Run Gutter Icons"/>
    </extensions>
</idea-plugin>
